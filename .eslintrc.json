{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/*", "dist/*", "public/*", "__tests__/*"],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
